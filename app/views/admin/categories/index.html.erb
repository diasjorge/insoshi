<h2>Listing categories</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

<% for category in @categories %>
  <tr>
    <td><%=h category.name %></td>
    <td><%=h category.description %></td>
    <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
    <td><%= link_to 'Destroy', [:admin, category], :confirm => 'Are you sure? All the associated events would be deleted too!', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New category', new_admin_category_path %>
