<li class="event">
  <a name="event_<%= event.id %>"></a>
  <div class="profile-image">
    <%= image_link event.person, :image => :thumbnail %>
    <%= image_tag "icons/new.gif", :class => "icon", :alt => "Event" %>
  </div>
  <p>
    <%= link_to h(event.title), event,
                :class => "show-follow" %>
    Starts at: <%= event.start_time.to_s :short %>
    <% unless event.end_time.nil? -%>
    / Ends at: <%= event.end_time.to_s :short %>
    <% end -%>
  </p>
  <p class="meta">
    Created by <%= person_link event.person %>
    <%= time_ago_in_words(event.created_at) %> ago
    <%- if admin? -%>
      | <%= link_to_if(current_person?(event.person), "Edit",  edit_event_path(event)) %>
      | <%= link_to_if(current_person?(event.person), "Destroy",  event, :confirm => 'Are you sure?', :method  => :delete) %>
    <%- end -%>
  </p>
</li>
